<!DOCTYPE html>
<html>
  <head>
    <title>TV Tracker - Dashboard</title>
  </head>
  <body>
    <div class="main-content dash-container text-center">

      <div class="title-container">
        <div class="title-links-container">
          <div class="title-links">
            <p id="coll-click" class="dashboard"><span>Collection</span></p>
            <p id="sched-click" class="dashboard"><span>Schedule</span></p>
          </div>
          <hr id="slide-hr" />
        </div>
      </div>
      <div class="tab-container">
        <div class="coll-tab">
          <div class="all_shows">
            <% if @showCount < 2 %> <!-- actual show list starts at count 2, thus why < 2 for no shows -->
              <h4>No shows! Add some by clicking here.</h4>
            <% elsif @showCount > 1 %>
              <div id="post-cont-deleg" class="show_list">
                <!-- for each show connected to the current user -->
                <% @showInfo.each do |obj| %>
                  <div class="poster-container <%= obj.shid %>">
                    <img class="poster" src="<%= obj.poster %>"></img>
                    <%= button_to "Info", info_path, remote: true, class: "info btn btn-outline-success btn-sm", "data-toggle": "modal", "data-target": "#showModal"%>
                    <%= button_to "Remove", remove_path, remote: true, class: "remove btn btn-outline-success btn-sm" %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="sched-tab">
          <script type="text/javascript">
            <%= render partial: 'schedule.js'%>
          </script>
          <div class="sched-container">
            <div id="day-one-cont" class="day-cont">
              <div id="day-one-date" class="day-dates">
                Today
              </div>
              <div id="day-one-shows" class="day-shows">
              </div>
            </div>
            <div id="day-two-cont" class="day-cont">
              <div id="day-two-date" class="day-dates">
                Tomorrow
              </div>
              <div id="day-two-shows" class="day-shows">
              </div>
            </div>
            <div id="day-three-cont" class="day-cont">
              <div id="day-three-date" class="day-dates">

              </div>
              <div id="day-three-shows" class="day-shows">
              </div>
            </div>
            <div id="day-four-cont" class="day-cont">
              <div id="day-four-date" class="day-dates">

              </div>
              <div id="day-four-shows" class="day-shows">
              </div>
            </div>
            <div id="day-five-cont" class="day-cont">
              <div id="day-five-date" class="day-dates">

              </div>
              <div id="day-five-shows" class="day-shows">
              </div>
            </div>
            <div id="day-six-cont" class="day-cont">
              <div id="day-six-date" class="day-dates">

              </div>
              <div id="day-six-shows" class="day-shows">
              </div>
            </div>
            <div id="day-seven-cont" class="day-cont">
              <div id="day-seven-date" class="day-dates">

              </div>
              <div id="day-seven-shows" class="day-shows">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal not visible until info button is clicked -->
    <div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content info-box">
          <div class="modal-header">
            <div class="show-info col-md-9">
              <!-- 'show_info_modal' partial rendered here when info button is clicked  -->
            </div>
            <!-- <div class="close-button-modal col-md-3">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div> -->
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
